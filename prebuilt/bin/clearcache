#!/system/bin/sh
#
# Clear Caches on data partition
# WesGarner for OpenEclair

echo "Erasing any ODEX / Dalvik-Cache files"
busybox rm /system/app/*.odex > /dev/null
busybox rm /data/app/*.odex > /dev/null
busybox rm /data/dalvik-cache/* > /dev/null

echo "Erasing Data Cache (app cache and webview)"
busybox rm -r /data/data/*/*cache* > /dev/null
busybox rm -r /data/data/*/*/*cache* > /dev/null
busybox rm -r /data/data/*/*/*webview* > /dev/null
